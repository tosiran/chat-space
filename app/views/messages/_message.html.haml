
.message{data: {message: {id: message.id}}}
  .message__content
    .name
      = message.user.name
    .time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: '' if message.image.present?